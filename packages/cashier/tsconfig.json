{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "paths": {
            "Components/*": ["src/components/*"],
            "Config/*": ["src/config/*"],
            "Constants/*": ["src/constants/*"],
            "Containers/*": ["src/containers/*"],
            "Pages/*": ["src/pages/*"],
            "Stores/*": ["src/stores/*"],
            "Types": ["src/types"],
            "Utils/*": ["src/utils/*"],
            "@deriv/*": ["../*/src"]
        },
        "outDir": "./dist",
        "baseUrl": "./",
        "experimentalDecorators": true // Todo: Should remove after migrating to MobX 6.
    },
    "include": ["src", "globals.d.ts"]
}
