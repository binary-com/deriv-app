{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "paths": {
            "Components/*": ["components/*"],
            "Config/*": ["config/*"],
            "Constants/*": ["constants/*"],
            "Containers/*": ["containers/*"],
            "Images/*": ["public/images/*"],
            "Pages/*": ["pages/*"],
            "Stores/*": ["stores/*"],
            "Types": ["types"],
            "Utils/*": ["utils/*"],
            "@deriv/*": ["../../*/src"]
        },
        "outDir": "./dist",
        "baseUrl": "src"
    },
    "include": ["./src", "./src/**/*.ts", "./src/**/*.tsx"]
}
