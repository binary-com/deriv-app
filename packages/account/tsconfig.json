{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": "src",
        "paths": {
            "Assets/*": ["Assets/*"],
            "Components/*": ["Components/*"],
            "Containers/*": ["Containers/*"],
            "Constants/*": ["Constants/*"],
            "Configs/*": ["Configs/*"],
            "Helpers/*": ["Helpers/*"],
            "Modules/*": ["Modules/*"],
            "Sections/*": ["Sections/*"],
            "Stores/*": ["Stores/*"],
            "Styles/*": ["Styles/*"],
            "Types": ["Types"]
        }
    },
    "include": ["./src/**/*.ts", "./src/**/*.tsx", "globals.d.ts"] // *** The files TypeScript should type check ***
}
